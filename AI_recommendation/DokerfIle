FROM python:3.11-slim

WORKDIR /app

# system deps
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# copy files
COPY . .

# install python deps
RUN pip install --no-cache-dir -r Python_API/requirements.txt

# expose port
EXPOSE 8080

# start app
CMD ["gunicorn", "--chdir", "Python_API", "sendData:app", "--workers", "1", "--timeout", "300", "--bind", "0.0.0.0:8080"]
